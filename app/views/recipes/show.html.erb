<p id="notice"><%= notice %></p>
<div class="row ">
  <div class="col-sm-5" id="test">
          <% if can? :update, @recipe %>
      <div id="actions">
          <%= link_to edit_recipe_path(@recipe) do %>
              <i class="fa fa-pencil fa-2x" aria-hidden="true"></i>
          <%end%>
          <%end%> 
          <br>
          <% if can? :update, @recipe %>
          <%= link_to recipe_path(@recipe), 
                        method: :delete,
                        data: { confirm: "Are you sure you want to delete this Recipe?"} do %> 
          <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
          <%end%>
    </div>
          <%end%>
    <p><%= image_tag @recipe.image , id: "recipe-img", class: "img-fluid"%></p>
    
    <p><%= link_to 'Add as Favorite','',class: "btn btn-primary btn-sm" %></p>
  </div>
  <div class="col-sm-7">
    <%= @recipe.name %>
    <hr>
    <%= @recipe.summary %>
    <hr>
    <small> <%= render @recipe.categories if @recipe.categories.present?%></small>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-3">
    <h4>Ingridents</h4>
    <% @recipe.ingredients.each do |ingrident, n| %>
    <p><%="#{n}"%><%= ingrident.name %></p>

    <%end %>
  </div>
<div class="col-sm-9">
<h4>Method</h4>
  <%= @recipe.description %>
</div>
</div>




 <hr>
