
<%= simple_form_for(resource, as: resource_name, id: "login", url: session_path(resource_name)) do |f| %>

<div class="login_parent">
  <div class="row login_form ">
  
      <div class="col-md-3 p-2" id="session_bg_0">
        <div class="d-flex justify-content-center p-4">
          <%=image_tag('salad.svg',size: 70, class: "rounded-circle")%> 
        </div>
        <h6 class="d-flex justify-content-center p-4 text-uppercase">ChopChop App</h6>
          <div class="d-flex justify-content-center pt-4">
           
            <%= f.input :email, required: false, autofocus: true ,placeholder: "Email",label: false %>
            </div>
  
  
            <div class="d-flex justify-content-center pt-4"><%= f.input :password, required: false, placeholder: "password",label: false %></div>
            
          <div class="d-flex justify-content-center pt-4">
            <%= f.button :submit, "Log in", class: "btn btn-info" %>
          </div>
      </div>
  
      <div class="col-9 d-flex align-items-center hidden-sm-down" id="session_bg_1">
      <h3 class="text-uppercase text-center"> Healthy Recipes</h3>
      <div class="">
        <h3 class="text-uppercase"> Healthy</h3>
      </div>
        
      </div>
  </div>
</div>
<% end %>

